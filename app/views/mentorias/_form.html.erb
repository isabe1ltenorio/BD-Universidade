<%= form_with(model: @mentoria, url: mentorias_path) do |form| %>
  <% if @mentoria.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@mentoria.errors.count, "erro") %> proibiu essa mentoria de ser salva:</h2>
      <ul>
        <% @mentoria.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nota, style: "display: block" %>
    <%= form.text_field :nota %>
  </div>

  <div>
    <%= form.label :aluno_id, style: "display: block" %>
    <%= form.text_field :aluno_id %>
  </div>

  <div>
    <%= form.label :instrutor_id, style: "display: block" %>
    <%= form.text_field :instrutor_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
